<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sakshitapp.android" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SakshitApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SakshitApp"
        android:windowBackground="@drawable/ic_splash" >
        <activity
            android:name=".view.MainStudentActivity"
            android:label="@string/title_activity_main_student" >
        </activity>
        <activity
            android:name=".view.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.SakshitApp.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>